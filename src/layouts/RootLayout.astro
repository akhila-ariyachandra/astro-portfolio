---
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
---

<html lang="en" class="h-full overflow-y-scroll scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      window.localStorage.setItem("theme", theme);
    </script>

    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Sora:wght@100;200;300;400;500;600;700;800&display=swap"
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap"
    />
  </head>

  <body
    class="flex h-full flex-col justify-between bg-white antialiased transition-colors duration-200 dark:bg-zinc-900"
  >
    <Header />

    <main class="container w-full max-w-3xl p-4"><slot /></main>

    <Footer />
  </body>
</html>
